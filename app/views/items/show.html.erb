<div class="col_md-10 col-md-offset-1">
  <h2><%= @item.title %></h2>
  <p><%= @item.description %></p>

  <div class="col-md-4 col-md-offset-4">
    <%= link_to "一覧に戻る", root_path %>
    <%= link_to "記事を編集する", edit_item_path(@item) %>
    <%= link_to "記事を削除する", item_path(@item), method: :delete, data: { confirm: "本当に削除してもいいですか？" } %>
</div>
